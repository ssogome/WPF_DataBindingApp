<Page x:Class="WPF_DataBindingApp.DockPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_DataBindingApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DockPanelPage">

    <DockPanel LastChildFill="False" >
        <Button DockPanel.Dock="Top" Height="50" >Top</Button>
        <Button DockPanel.Dock="Bottom" Height="50" >Bottom</Button>
        <Button DockPanel.Dock="Left" Height="200" >Left</Button>
        <Button DockPanel.Dock="Right" Height="50" Width="100" Click="BindingPage_Click" >Go To Binding Page</Button>
        <Button>Center</Button>
    </DockPanel>
</Page>
