<Page x:Class="WPF_DataBindingApp.PanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_DataBindingApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PanelPage">

    <Canvas>
        <Button Canvas.Left="10" >Top Left</Button>
        <Button Canvas.Right="10" >Top Right</Button>
        <Button Canvas.Bottom="10" Canvas.Left="10" >Bottom Left</Button>
        <Button Canvas.Right="10" Canvas.Bottom="10" Click="ToWrapPanel_Click">Go To WrapPanel Page</Button>

        <Ellipse Panel.ZIndex="2" Canvas.Left="25" Canvas.Top="25" Width="200" Height="200" Fill="Gainsboro"></Ellipse>
        <Rectangle Panel.ZIndex="3" Fill="LightBlue" Canvas.Left="25" Canvas.Top="25" Width="50" Height="50"/>
        <Rectangle Panel.ZIndex="2" Fill="LightCoral" Canvas.Left="50" Canvas.Top="50" Width="50" Height="50"/>
        <Rectangle Panel.ZIndex="4" Fill="Red" Canvas.Left="75" Canvas.Top="75" Width="50" Height="50"/>
    </Canvas>
</Page>
